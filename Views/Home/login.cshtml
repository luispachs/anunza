@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer
@{
    ViewData["Title"] = "View";
}

<section class="container">
    <div class="row d-flex align-items-center">
    <form asp-controller="Home" asp-action="loginprocess" method="post" class="col-md-4 p-3">
        <div class="form-group">
             <label for="user" class="form-label">@localizer["label_user"]</label>
            <input type="text" name="user" placeholder="usuario" class="form-control"/> 
        </div>        
        <div class="form-group">
                <label for="password" class="form-label">@localizer["label_password"]</label>
            <input type="password" placeholder="contraseña" name="password" class="form-control"/>
        </div>
        <div class="form-group pt-1">
                <button class="btn btn-success">Ingresar</button>
        </div>
    </form>
    </div>
</section>

