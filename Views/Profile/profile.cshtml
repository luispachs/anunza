
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer
@model TablonAnuncios.DataModels.profileDataModel
@{
    var user = Model.user;
    var anuncios = Model.anuncios;
    ViewData["title"] = "perfil";
}
<div class="title">
    <h2>@localizer["label_profile"]</h2>
</div>
<div class="container" id="profile-info">
    <section class="row">
        <h3>@localizer["label_info"]</h3>
        <div class="row">
            <div class="form-group">
                <label for="firstname" class="form-label">@localizer["label_firstname"]</label>
                <input type="text" value="@user.Firstname" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label for="lastname" class="form-label">@localizer["label_lastname"]</label>
                <input type="text" value="@user.Lastname" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label for="lastname" class="form-label">@localizer["label_dni"]</label>
                <input type="number" value="@user.Nit" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label for="lastname" class="form-label">@localizer["label_email"]</label>
                <input type="email" value="@user.Email" class="form-control" disabled/>
            </div>
        </div>
    </section>
    <section class="row">
        <h3>@localizer["label_advertisements"]</h3>
        <div class="row">
            @if (anuncios == null)
            {
                <h3 role="heading">@localizer["label_no_add"]</h3>
                <div class="row">
                    <div class="col-md-4"></div>
                    <div class="col-md-4"></div>
                    <div class="col-md-4 d-flex align-items-end"><a class="btn btn-success btn-lg" role="button" href="#">@localizer["label_button_create"]</a></div>
                </div>
            }
            else
            {   
                <div class="row">
                    <div class="col-lg-4"></div>
                    <div class="col-lg-4"></div>
                    <div class="col-lg-4 d-flex align-items-end">
                        <a class="btn btn-success btn-lg" role="button" href="#">@localizer["label_button_create"]</a>
                    </div>
                </div>
                @foreach(var anuncio in anuncios)
                {
                    <div class="row">
                        <div class="card" role="article">
                            <div class="card-header">
                                <h3>@anuncio.Title</h3>
                            </div>
                            <div class="card-body">
                              <article>
                                  <p>@anuncio.Description</p><br/>
                                  <p>@anuncio.Value</p>
                              </article>
                              <div>
                                    <button>@localizer["label_button_edit"]</button><button>@localizer["label_button_delete"]</button>
                              </div>
                            </div>
                        </div>
                    </div>
                }
            }          
        </div>
    </section>


</div>