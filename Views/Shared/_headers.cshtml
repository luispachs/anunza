@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Http
@using TablonAnuncios.Models
@inject IViewLocalizer localizer
@{
    User user = ViewBag.user;
}
<header class="container-fluid">
    <nav action="row">
        <ul class="nav  navbar-expand-lg">
            <li class="nav-item"><a class="nav-link" aria-current="page" asp-controller="Home" asp-action="index">@localizer["label_advertisements"]</a></li>
            @if (User.Identity.IsAuthenticated)
            {
                <li class="nav-item"><a class="nav-link" asp-controller="Profile" asp-action="Index">@localizer["label_profile"]</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="logout">@localizer["label_end_session"]</a></li>
            }
            else
            {
                <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="login">@localizer["label_start_session"]</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="register">@localizer["label_register"]</a></li>
            }
        </ul>
    </nav>
</header>